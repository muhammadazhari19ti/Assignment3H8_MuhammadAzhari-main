<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Assignment 3 Fahrian</title>
</head>
<body style="background-color:black;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid justify-content-center">
          <a class="navbar-brand" href="#">Hacktiv8</a>
        </div>
    </nav>
    <div class="container my-5 font-monospace">
        <h1 class="text-center text-light">
            Data Covid-19 di Indonesia
        </h1>
    </div>
    <% let positif = 0; let sembuh = 0; let meninggal = 0; 
    listCovid.forEach(element => 
    {
        positif += element.jumlah_kasus;
        sembuh += element.jumlah_sembuh;
        meninggal += element.jumlah_meninggal;
    }) %> 
    <div class="container my-3 font-monospace">
        <h5 class="text-light">Total Positif : <%= positif %> </h5>
        <h5 class="text-light">Total Sembuh : <%= sembuh %> </h5>
        <h5 class="text-light">Total Meninggal : <%= meninggal %>  </h5>
    </div>
    <div class="container font-monospace">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th>Provinsi</th>
                    <th>Positif</th>
                    <th>Sembuh</th>
                    <th>Meninggal</th>
                </tr>
            </thead>
            <tbody>
                <% listCovid.forEach(element => { %>
                    <tr>
                        <td><%= element.key %></td>
                        <td><%= element.jumlah_kasus %></td>
                        <td><%= element.jumlah_sembuh %></td>
                        <td><%= element.jumlah_meninggal %></td>
                    </tr>
                <%
                }); %> 
            </tbody>
        </table>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>